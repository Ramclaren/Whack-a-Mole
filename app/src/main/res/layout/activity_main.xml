<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/tapTheMole"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginTop="56dp"
        android:gravity="center"
        android:text="Tap the Mole!"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/toSplashButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="130dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="129dp"
        android:layout_marginBottom="8dp"
        android:text="Back To Start"
        android:onClick="onClick"
        app:layout_constraintBottom_toTopOf="@+id/pauseButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout" />

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="411dp"
        android:layout_height="411dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/toSplashButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tapTheMole">

        <ImageButton
            android:id="@+id/button0"
            android:layout_width="137dp"
            android:layout_height="137dp"
            android:scaleType="fitCenter"
            android:text="Button0"
            android:onClick="onClick"
            app:layout_column="0"
            app:layout_row="0"
            app:srcCompat="@drawable/hole"
            tools:layout_editor_absoluteX="54dp"
            tools:layout_editor_absoluteY="9dp" />

        <ImageButton
            android:id="@+id/button1"
            android:layout_width="137dp"
            android:layout_height="137dp"
            android:scaleType="fitCenter"
            android:text="Button1"
            android:onClick="onClick"
            app:layout_column="1"
            app:layout_row="0"
            app:srcCompat="@drawable/hole"
            tools:layout_editor_absoluteX="54dp"
            tools:layout_editor_absoluteY="9dp" />

        <ImageButton
            android:id="@+id/button2"
            android:layout_width="137dp"
            android:layout_height="137dp"
            android:scaleType="fitCenter"
            android:text="Button2"
            android:onClick="onClick"
            app:layout_column="2"
            app:layout_row="0"
            app:srcCompat="@drawable/hole"
            tools:layout_editor_absoluteX="54dp"
            tools:layout_editor_absoluteY="9dp" />

        <ImageButton
            android:id="@+id/button3"
            android:layout_width="137dp"
            android:layout_height="137dp"
            android:scaleType="fitCenter"
            android:text="Button3"
            android:onClick="onClick"
            app:layout_column="0"
            app:layout_row="1"
            app:srcCompat="@drawable/hole"
            tools:layout_editor_absoluteX="54dp"
            tools:layout_editor_absoluteY="9dp" />

        <ImageButton
            android:id="@+id/button4"
            android:layout_width="137dp"
            android:layout_height="137dp"
            android:scaleType="fitCenter"
            android:text="Button4"
            android:onClick="onClick"
            app:layout_column="1"
            app:layout_row="1"
            app:srcCompat="@drawable/hole"
            tools:layout_editor_absoluteX="54dp"
            tools:layout_editor_absoluteY="9dp" />

        <ImageButton
            android:id="@+id/button5"
            android:layout_width="137dp"
            android:layout_height="137dp"
            android:scaleType="fitCenter"
            android:text="Button5"
            android:onClick="onClick"
            app:layout_column="2"
            app:layout_row="1"
            app:srcCompat="@drawable/hole"
            tools:layout_editor_absoluteX="54dp"
            tools:layout_editor_absoluteY="9dp" />

        <ImageButton
            android:id="@+id/button6"
            android:layout_width="137dp"
            android:layout_height="137dp"
            android:scaleType="fitCenter"
            android:text="Button6"
            android:onClick="onClick"
            app:layout_column="0"
            app:layout_row="2"
            app:srcCompat="@drawable/hole"
            tools:layout_editor_absoluteX="54dp"
            tools:layout_editor_absoluteY="9dp" />

        <ImageButton
            android:id="@+id/button7"
            android:layout_width="137dp"
            android:layout_height="137dp"
            android:scaleType="fitCenter"
            android:text="Button7"
            android:onClick="onClick"
            app:layout_column="1"
            app:layout_row="2"
            app:srcCompat="@drawable/hole"
            tools:layout_editor_absoluteX="54dp"
            tools:layout_editor_absoluteY="9dp" />

        <ImageButton
            android:id="@+id/button8"
            android:layout_width="137dp"
            android:layout_height="137dp"
            android:scaleType="fitCenter"
            android:text="Button8"
            android:onClick="onClick"
            app:layout_column="2"
            app:layout_row="2"
            app:srcCompat="@drawable/hole"
            tools:layout_editor_absoluteX="54dp"
            tools:layout_editor_absoluteY="9dp" />
    </androidx.gridlayout.widget.GridLayout>

    <Button
        android:id="@+id/pauseButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="161dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="162dp"
        android:layout_marginBottom="98dp"
        android:text="Pause"
        android:onClick="onClick"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toSplashButton" />

</androidx.constraintlayout.widget.ConstraintLayout>

